extends _share/container.pug
block config
    - var title = "";
    - var keyword = "掼娱掼蛋,掼蛋,手机掼蛋,掼蛋官网";
    - var description = "掼娱掼蛋,给你不一样的棋牌体验!";
block head
    link(rel='stylesheet',href=cssUrl+'payment.css')
block html
    #header
        a(href="#")
            img(src=imgUrl+"back.png", alt="")
        |充值
    .container
        h3 充值档位
        ul
            li.flex(data-money="20" data-text="小试牛刀卡")
                div
                    img(src=imgUrl+"vip1.png", alt="")
                .right.flex
                    div
                        p.title 小试牛刀卡
                        p.des 充值后长期有效
                        p.money ￥#[em 20] #[del ￥#[em 30]]
                    .img
                        img(src=imgUrl+"next.png", alt="")
            li.flex(data-money="100" data-text="深入了解卡")
                div
                    img(src=imgUrl+"vip2.png", alt="")
                .right.flex
                    div
                        p.title 深入了解卡
                        p.des 充值后长期有效
                        p.money ￥#[em 100] #[del ￥#[em 110]]
                    .img
                        img(src=imgUrl+"next.png", alt="")
            li.flex(data-money="300" data-text="铁杆粉丝卡")
                div
                    img(src=imgUrl+"vip3.png", alt="")
                .right.flex
                    div
                        p.title 铁杆粉丝卡
                        p.des 充值后长期有效
                        p.money ￥#[em 300] #[del ￥#[em 340]]
                    .img
                        img(src=imgUrl+"next.png", alt="")
    .mask
        .content
            img.close(src=imgUrl+"close.png")
            h3 付款详情
            p.money ￥#[em 20]
            p 订单信息 #[span.msg 小试牛刀卡 20元]
            .typelist
                label.wechat.active(for="wechat") 微信支付
                    input#wechat(type="radio" value="wechat" checked)
            input#submit(type="submit" value="确认支付")
block js
    script(src=jsUrl+"payment.js")